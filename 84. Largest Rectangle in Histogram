class Solution(object):
    def largestRectangleArea(self, heights):
        """
        :type heights: List[int]
        :rtype: int
        """
        maxArea = 0
        st = []
        for i,h in enumerate(heights):
            start = i
            while st and st[-1][1] > h:
                index,height = st.pop()
                maxArea = max(maxArea,height*(i-index))
                start = index
            st.append((start,h))
        for i, h in st:
            maxArea = max(maxArea,h*(len(heights)-i))
        return maxArea

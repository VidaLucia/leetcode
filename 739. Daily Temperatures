class Solution(object):
    def dailyTemperatures(self, temperatures):
        """
        :type temperatures: List[int]
        :rtype: List[int]
        """
        # 
        ans = [0]*len(temperatures) # an array
        st = []

        for i in range(len(temperatures)):
            while st and temperatures[i] > temperatures[st[-1]]:
                idx=st.pop()
                ans[idx]=i-idx
            st.append(i)
        return ans
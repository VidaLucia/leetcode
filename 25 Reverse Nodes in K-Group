# Definition for singly-linked list.
# class ListNode(object):
#     def __init__(self, val=0, next=None):
#         self.val = val
#         self.next = next
class Solution(object):
    def reverseKGroup(self, head, k):
        """
        :type head: Optional[ListNode]
        :type k: int
        :rtype: Optional[ListNode]
        """
        if not head:
            return None
        tail = head
        for _ in range(k):
            if not tail:
                return head
            tail = tail.next
            # We are now at the first n 2
        def reverse(front,end):
            prev = None
            while front!=end:
                next= front.next
                front.next = prev
                prev = front
                front = next
            return prev # we should now be at the end of hte list still
        new_head = reverse(head,tail)
        head.next=self.reverseKGroup(tail,k)
        return new_head
        